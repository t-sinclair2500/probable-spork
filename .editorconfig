# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# PowerShell scripts - use CRLF for Windows compatibility
[*.ps1]
end_of_line = crlf

# Shell scripts - use LF for Unix compatibility
[*.sh]
end_of_line = lf

# Web files
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# Makefiles - use tabs
[Makefile]
indent_style = tab

# Docker files
[Dockerfile]
indent_size = 4

# Git ignore files
[.gitignore]
indent_size = 2
